(define-module (test-suite test-rdelim)
  #:use-module (test-suite lib)
  #:use-module (test-suite guile-test))

(use-modules (ice-9 rdelim))

(with-input-from-file "rdelim-utf16.txt"
  (lambda ()
    (set-port-encoding! (current-input-port) "UTF16LE")
    (skip-byte-order-mark!)

    (pass-if "first UTF-16 line OK"
      (string=? "hello" (read-line)))

    (pass-if "second UTF-16 line OK"
      (string=? "hello again" (read-line)))

    ))

